{
	"name": "cbacb-backend",
	"version": "0.1.0",
	"main": "index.js",
	"license": "MIT",
	"scripts": {
		"dev": "concurrently --raw 'yarn:dev:db' 'yarn:dev:backend'",
		"dev:backend": "dotenv -e .env.local -- node-dev src/index.ts",
		"dev:db": "cd .. && docker-compose -f docker-compose.db.yml up",
		"build": "tsc",
		"start": "dotenv -e .env.prod -- node dist/src",
		"lint": "eslint src/**/*.ts --fix",
		"lint-ci": "eslint src/**/*.ts",
		"prettier": "prettier --write .",
		"studio": "dotenv -e .env.local -- prisma studio",
		"generate": "prisma generate",
		"migrate:dev": "dotenv -e .env.local -- prisma migrate dev",
		"migrate:deploy": "dotenv -e .env.prod -- prisma migrate deploy",
		"unit-test": "dotenv -e .env.local -- jest --coverage --watchAll --coverageReporters=html",
		"unit-test-ci": "dotenv -e .env.local -- jest --coverage",
		"seed:local": "dotenv -e .env.local -- ts-node prisma/seed.ts",
		"seed:prod": "dotenv -e .env.prod -- ts-node prisma/seed.ts"
	},
	"dependencies": {
		"@prisma/client": "^4.8.0",
		"@quixo3/prisma-session-store": "^3.1.10",
		"@types/supertest": "^2.0.12",
		"axios": "^1.2.1",
		"bcrypt": "^5.1.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"dotenv-cli": "^7.0.0",
		"express": "^4.18.2",
		"express-session": "^1.17.3",
		"helmet": "^6.0.1",
		"jest-mock-extended": "2.0.4",
		"pino": "^8.8.0",
		"socket.io": "^4.5.3",
		"supertest": "^6.3.3",
		"typescript": "^4.8.4",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.14",
		"@types/express-session": "^1.17.5",
		"@types/jest": "^29.2.5",
		"@types/node": "^18.11.9",
		"@typescript-eslint/eslint-plugin": "^5.42.1",
		"@typescript-eslint/parser": "^5.42.1",
		"concurrently": "^7.6.0",
		"eslint": "^8.27.0",
		"eslint-config-prettier": "^8.5.0",
		"jest": "^29.3.1",
		"node-dev": "^7.4.3",
		"pino-pretty": "^9.1.1",
		"prettier": "^2.7.1",
		"prisma": "^4.6.1",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1"
	}
}
